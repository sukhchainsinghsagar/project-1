        source: 'home_icon_png.png'
        pos_hint: {'top':1,'right':1}
        size_hint_x: 0.2
        size_hint_y: 0.1
        allow_stretch: True
        
    BoxLayout:
        orientation: 'vertical'
        # size: root.width, root.height
        
                            

