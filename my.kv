
<Homepage>:
    orientation: 'vertical'
    BoxLayout:
        padding: 5
    Image:
        source: 'home_logo.jpg'  
        size_hint_x: 0.1
        size_hint_y: 1.9
        allow_stretch: True
    BoxLayout:
        
        orientation: 'horizontal'
        Label:
            text: 'GURU SIKHI'
            font_size: 50
            size_hint_x: 0.8
            size_hint_y: 1.9
            bold: True
            allow_stretch: True
            color: (41, 97, 166)
    
        Button:
            background_normal:'home_icon_png.png'
            pos_hint: {'top':1,'left':1}
            size_hint_x: 0.2
            size_hint_y: 0.1
            allow_stretch: True
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height
        Label:
            text: '___________________________________________________ '
            # size_hint_x: 1
            # size_hint_y: 1
            pos_hint: {'center_x':0.4,'center_y':0.9}
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Japji Sahib'
            size_hint_x: 0.2
            size_hint_y: 0.1
            pos_hint: {'center_x':0.4,'center_y':0.8}
            on_press: root.manager.current = 'japji'
           
<JapjiSahib>
    Button:
        text: "back to home "
        
        font_size: 12
        bold: True
        size_hint_x: 0.2
        size_hint_y: 0.1
        pos_hint: {'top':1,'left':1}
        on_press: 
            root.manager.current = 'home'
        border: (1,1,1,1)
