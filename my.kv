            do_scroll_x: False
            do_scroll_y: True
             
            Label:
                canvas.before:
                    Color: 
                        rgba: (0.3, 2, 0.8, 0.3)
                    RoundedRectangle: 
                        pos: self.pos
                        size: self.size
                        radius: [40]
